# ============================================
# VKSIT BHARAT COMPLIANCE SUITE - ENVIRONMENT CONFIGURATION
# ============================================

# Application Environment
NODE_ENV=development
PORT=5000

# Client Configuration
CLIENT_URL=http://localhost:3000
VITE_API_BASE_URL=http://localhost:5000/api
VITE_APP_NAME=Viksit Bharat Compliance Suite
VITE_APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=viksit_bharat_compliance
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL=false

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for notifications and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM=noreply@viksitbharat.com
EMAIL_FROM_NAME=Viksit Bharat Compliance Suite

# SMS Configuration (for critical alerts)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,txt

# Security Configuration
CORS_ORIGIN=http://localhost:3000
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here_32_chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW_MS=900000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL=0 2 * * *

# Integration Configuration
GOVT_API_BASE_URL=https://api.govt.example.com
GOVT_API_KEY=your_government_api_key
NAAC_API_BASE_URL=https://api.naac.example.com
NAAC_API_KEY=your_naac_api_key
AICTE_API_BASE_URL=https://api.aicte.example.com
AICTE_API_KEY=your_aicte_api_key

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_AUTO_BACKUP=true
ENABLE_GOVT_INTEGRATION=false
ENABLE_AI_ASSISTANT=true
ENABLE_ADVANCED_ANALYTICS=false

# Development Configuration (only for development)
DEBUG=app:*
MOCK_EXTERNAL_APIS=false
SKIP_EMAIL_VERIFICATION=true
SKIP_FILE_VALIDATION=false

# Production Configuration (override in production)
# USE_PM2=true
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# FORCE_HTTPS=true